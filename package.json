{
  "name": "testable-reactions",
  "version": "0.0.3",
  "description": "A fully testable react project boilerplate",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run copyAssets && ./node_modules/.bin/webpack",
    "copyAssets": "mkdir -p dist; cp ./index.html ./dist/index.html",
    "postinstall": "npm run build",
    "serve": "npm run copyAssets && NODE_ENV=dev webpack-dev-server --devtool eval --progress --colors --hot --content-base dist --port 4080 --host 0.0.0.0 --history-api-fallback",
    "lint": "eslint ./src ./test --ext .jsx --ext .js",
    "lintFix": "eslint ./src ./test --ext .jsx --ext .js --fix",
    "stylelint": "node_modules/.bin/stylelint './src/**/*.css'",
    "test": "npm run lint && npm run stylelint && npm run test:visual:cli && npm run test:unit:coverage:cli",
    "test:unit": "babel-node node_modules/.bin/_mocha ./test/test.js -R nyan -r ignore-styles -r ./test/test-setup",
    "test:unit:coverage": "npm run test:unit:coverage:cli && open coverage/lcov-report/index.html",
    "test:unit:coverage:cli": "node_modules/.bin/babel-node node_modules/.bin/babel-istanbul cover _mocha -- -R spec -r ignore-styles -r mock-local-storage -r ./test/test-setup",
    "test:visual": "npm run test:visual:cli && npm run test:visual:report",
    "test:visual:baseline": "cd node_modules/backstopjs/ && npm run reference",
    "test:visual:clean": "cd node_modules/backstopjs/ && rm -rf bitmaps_test",
    "test:visual:cli": "npm run test:visual:clean && cd node_modules/backstopjs/ && npm test",
    "test:visual:report": "cd node_modules/backstopjs/ && npm run openReport"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-eslint": "^6.1.2",
    "babel-istanbul": "^0.11.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-webpack-alias": "^1.3.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.9.0",
    "babel-root-slash-import": "^1.1.0",
    "backstopjs": "^1.3.5",
    "css-loader": "^0.23.1",
    "enzyme": "^2.3.0",
    "eslint": "^3.4.0",
    "eslint-plugin-react": "^6.2.0",
    "ignore-styles": "^4.0.0",
    "istanbul-coveralls": "^1.0.3",
    "jsdom": "^9.9.1",
    "json-loader": "^0.5.4",
    "mocha": "^2.5.3",
    "mocha-istanbul": "^0.2.0",
    "mock-local-storage": "^1.0.2",
    "promise-polyfill": "^5.2.1",
    "react": "^15.2.0",
    "react-addons-test-utils": "^15.2.0",
    "react-dom": "^15.2.0",
    "react-hot-loader": "^1.3.0",
    "react-router": "^2.5.2",
    "sinon": "^1.17.4",
    "style-loader": "^0.13.1",
    "stylelint": "^7.7.0",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-shell-plugin": "^0.4.2"
  }
}
